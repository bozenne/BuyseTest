Package: BuyseTest
Type: Package
Title: Generalized Pairwise Comparisons
Version: 3.0.5
Date: 2024-10-13
Authors@R: c(
    person("Brice", "Ozenne", role = c("aut", "cre"), email = "brice.mh.ozenne@gmail.com", comment = c(ORCID = "0000-0001-9694-2956")),
